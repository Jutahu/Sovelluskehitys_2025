<Window x:Class="Sovelluskehitys_2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sovelluskehitys_2025"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Tuotteet">
                <Grid Background="#FFE5E5E5">
                    <Button Content="Hae tiedot" HorizontalAlignment="Left" Margin="8,339,0,0" VerticalAlignment="Top" Height="40" Width="109" Click="Button_Click_1"/>
                    <DataGrid x:Name="tuotelista" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="122,24,10,27"/>
                </Grid>
            </TabItem>
            <TabItem Header="lisaa tai poista">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90*"/>
                        <ColumnDefinition Width="307*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Lisää tuote" HorizontalAlignment="Left" Margin="5,194,0,0" VerticalAlignment="Top" Height="40" Width="136" Click="Button_Click" Grid.Column="1"/>
                    <TextBox x:Name="tekstikentta_1" HorizontalAlignment="Left" Margin="5,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="20" Grid.Column="1"/>
                    <TextBox x:Name="tekstikentta_2" HorizontalAlignment="Left" Margin="5,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="20" RenderTransformOrigin="1.005,0.536" Grid.Column="1"/>
                    <TextBox x:Name="tekstikentta_3" HorizontalAlignment="Left" Margin="5,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="20" RenderTransformOrigin="1.005,0.536" Grid.Column="1"/>
                    <ComboBox x:Name="cb_tuotelista" HorizontalAlignment="Left" Margin="300,83,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
                    <Label Content="Nimi" HorizontalAlignment="Left" Margin="84,77,0,0" VerticalAlignment="Top" Width="86"/>
                    <Label Content="Hinta" HorizontalAlignment="Left" Margin="84,111,0,0" VerticalAlignment="Top" Width="86"/>
                    <Label Content="Varastosaldo" HorizontalAlignment="Left" Margin="84,148,0,0" VerticalAlignment="Top" Width="86"/>
                    <Button Content="Poista" HorizontalAlignment="Left" Margin="340,117,0,0" VerticalAlignment="Top" Height="33" Width="80" Click="Button_Click_2" Grid.Column="1"/>
                    <CheckBox x:Name="valinta_boksi" Content="Admin" HorizontalAlignment="Left" Margin="84,259,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked"/>

                </Grid>
            </TabItem>

            <TabItem x:Name="asiakkaat_tab" Header="asiakkaat">
                <Grid Background="#FFE5E5E5">

                </Grid>
            </TabItem>


        </TabControl>

    </Grid>
</Window>
